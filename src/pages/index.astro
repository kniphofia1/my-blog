---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import BackToTop from '../components/BackToTop.astro';
import ReadingProgress from '../components/ReadingProgress.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';
import { getReadingTime, formatWordCount } from '../utils/reading-time';

// 获取所有博客文章
const allPosts = await getCollection('blog');

// 计算每篇文章的阅读时间（使用 post.body）
const postsWithReadingTime = allPosts.map((post) => {
	// post.body 包含原始的 Markdown/MDX 内容
	const content = post.body || '';
	const readingTime = getReadingTime(content);
	return {
		post,
		readingTime,
	};
});

// 按日期倒序排列
const sortedPosts = postsWithReadingTime.sort(
	(a, b) => b.post.data.pubDate.valueOf() - a.post.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<ReadingProgress />
		<Header />
		<main class="container">
			<div class="hero">
				<h1 class="title">{SITE_TITLE}</h1>
				<p class="subtitle">{SITE_DESCRIPTION}</p>
			</div>

			<section class="posts-list">
				{sortedPosts.map(({ post, readingTime }) => (
					<article class="post-item">
						<a href={`/blog/${post.id}/`} class="post-link">
							<h2 class="post-title">{post.data.title}</h2>
						</a>
						<div class="post-meta">
							<time datetime={post.data.pubDate.toISOString()}>
								{post.data.pubDate.toLocaleDateString('zh-CN')}
							</time>
							<span class="post-stats">
								{formatWordCount(readingTime.words)}字 · {readingTime.minutes}分钟
							</span>
							{post.data.updatedDate && (
								<span class="post-updated">
									（更新于 {post.data.updatedDate.toLocaleDateString('zh-CN')}）
								</span>
							)}
						</div>
						{post.data.description && (
							<p class="post-description">{post.data.description}</p>
						)}
						{post.data.tags && post.data.tags.length > 0 && (
							<div class="post-tags">
								{post.data.tags.map((tag) => (
									<a href={`/tags/${tag}/`} class="tag">
										#{tag}
									</a>
								))}
							</div>
						)}
					</article>
				))}
			</section>
		</main>
		<BackToTop />
		<Footer />
	</body>
</html>

<style>
	/* Hero 区域 - 北欧有机风格 */
	.hero {
		text-align: center;
		margin-bottom: var(--space-3xl);
		padding: var(--space-3xl) var(--space-xl);
		background: var(--glass-bg);
		backdrop-filter: var(--glass-blur);
		-webkit-backdrop-filter: var(--glass-blur);
		border-radius: 32px 24px 28px 26px;
		border: 1px solid var(--glass-border);
		box-shadow: var(--glass-shadow);
		animation: fadeInUp 0.8s ease-out;
		position: relative;
		overflow: hidden;
	}

	/* Hero 装饰性光晕 */
	.hero::before {
		content: '';
		position: absolute;
		top: -50%;
		left: -50%;
		width: 200%;
		height: 200%;
		background: var(--gradient-glow);
		opacity: 0.5;
		animation: rotate 20s linear infinite;
		pointer-events: none;
	}

	@keyframes rotate {
		from { transform: rotate(0deg); }
		to { transform: rotate(360deg); }
	}

	.hero > * {
		position: relative;
		z-index: 1;
	}

	.title {
		font-size: 3.5rem;
		font-weight: 700;
		margin-bottom: var(--space-md);
		letter-spacing: -0.02em;
		background: var(--gradient-primary);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		position: relative;
		display: inline-block;
	}

	.subtitle {
		font-size: 1.25rem;
		color: var(--text-secondary);
		font-weight: 400;
		max-width: 600px;
		margin: 0 auto;
		line-height: 1.7;
	}

	/* 文章列表 */
	.posts-list {
		display: flex;
		flex-direction: column;
		gap: var(--space-xl);
	}

	/* 文章卡片 - 北欧苹果风格 */
	.post-item {
		position: relative;
		padding: var(--space-xl);
		background: var(--apple-glass);
		backdrop-filter: var(--glass-blur);
		-webkit-backdrop-filter: var(--glass-blur);
		border: 1px solid var(--glass-border);
		border-left: 3px solid var(--accent);
		border-radius: 20px 24px 22px 23px;
		box-shadow: var(--glass-shadow);
		transition: all var(--transition-base);
		animation: fadeInUp 0.6s ease-out backwards;
		overflow: hidden;
	}

	/* 卡片有机光晕 */
	.post-item::after {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: var(--shimmer-bg);
		transition: left 0.8s cubic-bezier(0.32, 0.72, 0, 1);
		pointer-events: none;
	}

	.post-item:hover::after {
		left: 100%;
	}

	.post-item:nth-child(1) { animation-delay: 0.1s; }
	.post-item:nth-child(2) { animation-delay: 0.2s; }
	.post-item:nth-child(3) { animation-delay: 0.3s; }
	.post-item:nth-child(4) { animation-delay: 0.4s; }
	.post-item:nth-child(5) { animation-delay: 0.5s; }

	.post-item:hover {
		background: var(--glass-bg-hover);
		border-left-color: var(--forest-300);
		box-shadow: 0 12px 40px rgba(42, 40, 38, 0.12);
		transform: translateY(-6px);
		border-color: rgba(122, 139, 110, 0.3);
	}

	/* 文章链接 */
	.post-link {
		text-decoration: none;
		color: inherit;
		display: block;
	}

	.post-title {
		font-size: 1.875rem;
		font-weight: 700;
		margin-bottom: var(--space-md);
		color: var(--text-primary);
		letter-spacing: -0.03em;
		line-height: 1.3;
		transition: all var(--transition-base);
		position: relative;
	}

	.post-item:hover .post-title {
		background: var(--gradient-primary);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	/* 文章元信息 */
	.post-meta {
		font-size: 0.875rem;
		color: var(--text-secondary);
		margin-bottom: var(--space-md);
		display: flex;
		gap: var(--space-md);
		align-items: center;
		flex-wrap: wrap;
	}

	.post-meta time {
		display: inline-flex;
		align-items: center;
		gap: var(--space-xs);
		padding: var(--space-xs) var(--space-sm);
		background: rgba(var(--gray-200), 0.5);
		border-radius: var(--radius-md);
		font-weight: 500;
	}

	/* 阅读统计标签 - 自然风格 */
	.post-stats {
		background: var(--gradient-primary);
		color: white;
		padding: var(--space-xs) var(--space-md);
		border-radius: var(--radius-full);
		font-size: 0.75rem;
		font-weight: 600;
		box-shadow: 0 3px 10px rgba(92, 107, 84, 0.2);
		display: inline-flex;
		align-items: center;
		gap: var(--space-xs);
		letter-spacing: 0.01em;
	}

	.post-updated {
		font-style: italic;
		color: var(--text-tertiary);
		font-size: 0.8125rem;
	}

	/* 文章描述 */
	.post-description {
		color: var(--text-secondary);
		line-height: 1.7;
		margin-bottom: var(--space-md);
		font-size: 1rem;
	}

	/* 标签系统 - 北欧自然胶囊 */
	.post-tags {
		display: flex;
		gap: var(--space-sm);
		flex-wrap: wrap;
		margin-top: var(--space-md);
	}

	.tag {
		display: inline-flex;
		align-items: center;
		gap: var(--space-xs);
		padding: var(--space-xs) var(--space-md);
		background: rgba(245, 242, 237, 0.8);
		backdrop-filter: blur(10px);
		-webkit-backdrop-filter: blur(10px);
		color: var(--ocean-300);
		border-radius: var(--radius-full);
		font-size: 0.8125rem;
		font-weight: 500;
		text-decoration: none;
		border: 1px solid var(--border-color);
		transition: all var(--transition-base);
		box-shadow: var(--shadow-sm);
	}

	.tag::before {
		content: '#';
		opacity: 0.6;
	}

	.tag:hover {
		background: var(--gradient-primary);
		color: white;
		border-color: transparent;
		transform: translateY(-2px);
		box-shadow: 0 4px 12px rgba(92, 107, 84, 0.25);
	}

	/* 动画定义 */
	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	/* 响应式优化 */
	@media (max-width: 768px) {
		.hero {
			padding: var(--space-xl) var(--space-md);
			margin-bottom: var(--space-xl);
			border-radius: var(--radius-xl);
		}

		.title {
			font-size: 2.5rem;
		}

		.subtitle {
			font-size: 1rem;
		}

		.post-title {
			font-size: 1.5rem;
		}

		.post-item {
			padding: var(--space-lg);
		}

		.post-item:hover {
			transform: translateY(-4px);
		}

		.tag:hover {
			transform: translateY(-1px);
		}
	}
</style>
