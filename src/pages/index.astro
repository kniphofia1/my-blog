---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import BackToTop from '../components/BackToTop.astro';
import ReadingProgress from '../components/ReadingProgress.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';
import { getReadingTime, formatWordCount } from '../utils/reading-time';

// è·å–æ‰€æœ‰åšå®¢æ–‡ç« 
const allPosts = await getCollection('blog');

// è®¡ç®—æ¯ç¯‡æ–‡ç« çš„é˜…è¯»æ—¶é—´ï¼ˆä½¿ç”¨ post.bodyï¼‰
const postsWithReadingTime = allPosts.map((post) => {
	// post.body åŒ…å«åŸå§‹çš„ Markdown/MDX å†…å®¹
	const content = post.body || '';
	const readingTime = getReadingTime(content);
	return {
		post,
		readingTime,
	};
});

// æŒ‰æ—¥æœŸå€’åºæ’åˆ—
const sortedPosts = postsWithReadingTime.sort(
	(a, b) => b.post.data.pubDate.valueOf() - a.post.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<ReadingProgress />
		<Header />
		<main class="container">
			<div class="hero">
				<h1 class="title">{SITE_TITLE}</h1>
				<p class="subtitle">{SITE_DESCRIPTION}</p>
			</div>

			<section class="posts-list">
				{sortedPosts.map(({ post, readingTime }) => (
					<article class="post-item">
						<a href={`/blog/${post.id}/`} class="post-link">
							<h2 class="post-title">{post.data.title}</h2>
						</a>
						<div class="post-meta">
							<time datetime={post.data.pubDate.toISOString()}>
								{post.data.pubDate.toLocaleDateString('zh-CN')}
							</time>
							<span class="post-stats">
								{formatWordCount(readingTime.words)}å­— Â· {readingTime.minutes}åˆ†é’Ÿ
							</span>
							{post.data.updatedDate && (
								<span class="post-updated">
									ï¼ˆæ›´æ–°äº {post.data.updatedDate.toLocaleDateString('zh-CN')}ï¼‰
								</span>
							)}
						</div>
						{post.data.description && (
							<p class="post-description">{post.data.description}</p>
						)}
						{post.data.tags && post.data.tags.length > 0 && (
							<div class="post-tags">
								{post.data.tags.map((tag) => (
									<a href={`/tags/${tag}/`} class="tag">
										#{tag}
									</a>
								))}
							</div>
						)}
					</article>
				))}
			</section>
		</main>
		<BackToTop />
		<Footer />
	</body>
</html>

<style>
	/* Hero åŒºåŸŸ - ä¼˜é›…å±•ç¤º */
	.hero {
		text-align: center;
		margin-bottom: var(--space-3xl);
		padding: var(--space-3xl) 0;
		animation: fadeInUp 0.6s ease-out;
	}

	.title {
		font-size: 3rem;
		font-weight: 800;
		margin-bottom: var(--space-md);
		color: var(--text-primary);
		letter-spacing: -0.03em;
		background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.subtitle {
		font-size: 1.25rem;
		color: var(--text-secondary);
		font-weight: 400;
		max-width: 600px;
		margin: 0 auto;
		line-height: 1.6;
	}

	/* æ–‡ç« åˆ—è¡¨ */
	.posts-list {
		display: flex;
		flex-direction: column;
		gap: var(--space-xl);
	}

	/* æ–‡ç« å¡ç‰‡ - Soft UI è®¾è®¡ */
	.post-item {
		position: relative;
		padding: var(--space-xl);
		background: var(--card-bg);
		border: 1px solid var(--card-border);
		border-left: 4px solid var(--accent);
		border-radius: var(--radius-lg);
		box-shadow: var(--card-shadow);
		transition: all var(--transition-base);
		animation: fadeInUp 0.6s ease-out backwards;
	}

	.post-item:nth-child(1) { animation-delay: 0.1s; }
	.post-item:nth-child(2) { animation-delay: 0.2s; }
	.post-item:nth-child(3) { animation-delay: 0.3s; }
	.post-item:nth-child(4) { animation-delay: 0.4s; }

	.post-item:hover {
		background: var(--card-bg-hover);
		border-left-color: var(--accent-dark);
		box-shadow: var(--card-shadow-hover);
		transform: translateX(8px);
	}

	/* æ–‡ç« é“¾æ¥ */
	.post-link {
		text-decoration: none;
		color: inherit;
		display: block;
	}

	.post-title {
		font-size: 1.75rem;
		font-weight: 700;
		margin-bottom: var(--space-md);
		color: var(--text-primary);
		letter-spacing: -0.02em;
		line-height: 1.3;
		transition: color var(--transition-fast);
	}

	.post-item:hover .post-title {
		color: var(--accent);
	}

	/* æ–‡ç« å…ƒä¿¡æ¯ */
	.post-meta {
		font-size: 0.875rem;
		color: var(--text-secondary);
		margin-bottom: var(--space-md);
		display: flex;
		gap: var(--space-md);
		align-items: center;
		flex-wrap: wrap;
	}

	.post-meta time {
		display: flex;
		align-items: center;
		gap: var(--space-xs);
	}

	.post-meta time::before {
		content: 'ğŸ“…';
		font-size: 1rem;
	}

	/* é˜…è¯»ç»Ÿè®¡æ ‡ç­¾ */
	.post-stats {
		background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
		color: white;
		padding: var(--space-xs) var(--space-sm);
		border-radius: var(--radius-full);
		font-size: 0.75rem;
		font-weight: 600;
		box-shadow: 0 2px 4px rgba(99, 102, 241, 0.2);
		display: inline-flex;
		align-items: center;
		gap: var(--space-xs);
	}

	.post-stats::before {
		content: 'âš¡';
		font-size: 0.875rem;
	}

	.post-updated {
		font-style: italic;
		color: var(--text-tertiary);
	}

	/* æ–‡ç« æè¿° */
	.post-description {
		color: var(--text-secondary);
		line-height: 1.7;
		margin-bottom: var(--space-md);
		font-size: 1rem;
	}

	/* æ ‡ç­¾ç³»ç»Ÿ - æŸ”å’Œèƒ¶å›Šæ ·å¼ */
	.post-tags {
		display: flex;
		gap: var(--space-sm);
		flex-wrap: wrap;
		margin-top: var(--space-md);
	}

	.tag {
		display: inline-flex;
		align-items: center;
		gap: var(--space-xs);
		padding: var(--space-xs) var(--space-md);
		background: var(--bg-tertiary);
		color: var(--accent);
		border-radius: var(--radius-full);
		font-size: 0.8125rem;
		font-weight: 500;
		text-decoration: none;
		border: 1px solid var(--border-color);
		transition: all var(--transition-base);
	}

	.tag::before {
		content: '#';
		opacity: 0.6;
	}

	.tag:hover {
		background: var(--accent);
		color: white;
		border-color: var(--accent);
		transform: translateY(-2px);
		box-shadow: var(--button-shadow-hover);
	}

	/* åŠ¨ç”»å®šä¹‰ */
	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	/* å“åº”å¼ä¼˜åŒ– */
	@media (max-width: 768px) {
		.hero {
			padding: var(--space-xl) 0;
			margin-bottom: var(--space-xl);
		}

		.title {
			font-size: 2.25rem;
		}

		.subtitle {
			font-size: 1rem;
		}

		.post-title {
			font-size: 1.5rem;
		}

		.post-item {
